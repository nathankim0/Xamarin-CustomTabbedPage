<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="uipractice.Controls.TitleBar">
    <Grid Padding="0" Margin="0" BackgroundColor="Transparent">
        <Label
            FontAttributes="Bold"
            FontSize="40"
            Text="{Binding Title}"
            TextColor="{AppThemeBinding Dark={StaticResource WhiteColor},Light={StaticResource BlackColor}}"
            VerticalTextAlignment="Start"
            HorizontalTextAlignment="Start"/>
    </Grid>
</ContentView>

